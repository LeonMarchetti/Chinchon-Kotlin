<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leoam.chinchonkotlin">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="juego.chinchon.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="juego.chinchon.activities.AcomodarActivity"
            android:label="@string/title_activity_acomodar"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true" />
        <activity
            android:name="juego.chinchon.activities.CambioTurnoActivity"
            android:label="@string/title_activity_cambio_turno"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="juego.chinchon.activities.GanadorActivity"
            android:label="@string/title_activity_ganador"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="juego.chinchon.activities.PartidaActivity"
            android:label="@string/title_activity_partida"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="juego.chinchon.activities.RegistroJugadoresActivity"
            android:label="@string/title_activity_registro_jugadores"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true" />
    </application>

</manifest>