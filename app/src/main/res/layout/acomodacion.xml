<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical">

    <TextView android:id="@+id/ac_tv_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_jugador_1"
        android:textColor="@color/texto" />

    <TextView android:id="@+id/ac_tv_corte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/texto" />

    <TextView android:id="@+id/ac_tv_puntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ac_sumapuntos"
        android:textColor="@color/texto" />

    <GridLayout android:id="@+id/ac_mano"
        android:columnCount="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="2" >

        <FrameLayout
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="1"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="3"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="1"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="6" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_column="3"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_width="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:tag="8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:contentDescription="@string/carta"
                android:src="@drawable/check"
                android:visibility="invisible" />
        </FrameLayout>

    </GridLayout>

    <TextView android:id="@+id/ac_errortext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/texto" />

    <LinearLayout android:id="@+id/ac_buttonrow"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta1"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta2"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta3"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta4"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta5"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta6"
            android:textColor="@color/ac_textoBarraBotones" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ac_deseleccionado"
            android:text="@string/ac_carta7"
            android:textColor="@color/ac_textoBarraBotones" />
    </LinearLayout>

    <Button android:id="@+id/ac_emparejar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/ac_Emparejar" />

    <Button android:id="@+id/ac_desarmar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/ac_Desarmar" />

    <Button android:id="@+id/ac_finalizar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ac_Cancelar" />
</LinearLayout>
