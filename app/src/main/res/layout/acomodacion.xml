<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_mesajuego"
    >

    <TextView
        android:id="@+id/ac_tv_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ac_nombre"
        />

    <TextView
        android:id="@+id/ac_tv_corte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ac_nombre"
        />

    <TableLayout
        android:id="@+id/ac_mano"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <!-- ac_mano_1 tablerow1 -->
        <TableRow
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/ac_imgcarta_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="1"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="2"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="3"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="4"
                />

        </TableRow>

        <!-- ac_mano_1 tablerow2 -->
        <TableRow
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/ac_imgcarta_1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="5"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="6"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="7"
                />

            <ImageView
                android:id="@+id/ac_imgcarta_1_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/carta"
                android:layout_weight="1"
                android:tag="8"
                />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/ac_errortext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ac_buttonrow"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta4"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta6"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ac_deseleccionado"
            android:layout_weight="1"
            android:text="@string/ac_carta7"
            />
    </LinearLayout>

    <Button
        android:id="@+id/ac_emparejar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/ac_Emparejar"
        />

    <Button
        android:id="@+id/ac_desarmar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/ac_Desarmar"
        />

    <Button
        android:id="@+id/ac_finalizar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ac_Cancelar" />

</LinearLayout>
